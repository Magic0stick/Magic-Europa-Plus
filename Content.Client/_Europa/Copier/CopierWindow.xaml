<controls:FancyWindow xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'copier-ui-title'}"
    MinSize="950 525"
    Resizable="True">
    <BoxContainer Orientation="Vertical">
        <SplitContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True" Margin="7 0">
            <BoxContainer Orientation="Vertical">
                <BoxContainer Orientation="Vertical">
                    <Label Text="{Loc 'copier-ui-options'}"/>
                    <controls:HLine Color="#404040" Thickness="2" Margin="0 0 0 5"/>
                    <Control SetSize="0 2" />
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                        <Label Text="{Loc 'copier-ui-mode'}" />
                        <Control SetSize="14 0" />
                        <Button Name="CopyModeButton" Text="{Loc 'copier-ui-mode-copy'}" HorizontalExpand="True" StyleClasses="OpenRight" />
                        <Button Name="PrintModeButton" Text="{Loc 'copier-ui-mode-print'}" HorizontalExpand="True" StyleClasses="OpenLeft" />
                    </BoxContainer>
                    <Control SetSize="0 4" />
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                        <Label Text="{Loc 'copier-ui-amount'}" />
                        <Control MinWidth="4" />
                        <SpinBox Name="Amount" Access="Public" HorizontalExpand="True" Value="1" />
                    </BoxContainer>
                    <Control SetSize="0 10" />
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                        <Button Name="StartButton" Text="{Loc 'copier-ui-start'}" HorizontalExpand="True" />
                        <Button Name="StopButton" Text="{Loc 'copier-ui-stop'}" HorizontalExpand="True" />
                    </BoxContainer>
                </BoxContainer>
                <Control SetSize="0 10" />
                <BoxContainer Orientation="Vertical">
                    <Label Text="{Loc 'copier-ui-categories'}"/>
                    <controls:HLine Color="#404040" Thickness="2" Margin="0 0 0 2"/>
                    <BoxContainer Name="DocumentCategories" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" >
                <Label Text="{Loc 'copier-ui-docs'}"/>
                <controls:HLine Color="#404040" Thickness="2" Margin="0 0 0 5"/>
                <Control SetSize="0 2" />
                <LineEdit Name="SearchBar" PlaceHolder="{Loc 'copier-ui-search'}" HorizontalExpand="True" />
                <Control SetSize="0 4" />
                <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
                    <BoxContainer Name="DocumentForms" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                    </BoxContainer>
                </ScrollContainer>
            </BoxContainer>
        </SplitContainer>
        <BoxContainer Orientation="Vertical">
            <PanelContainer StyleClasses="LowDivider"/>
            <BoxContainer Orientation="Horizontal" Margin="10 2 5 0" VerticalAlignment="Bottom">
                <Label Text="{Loc 'copier-ui-flavor-left'}" StyleClasses="WindowFooterText"/>
                <Label Text="{Loc 'copier-ui-flavor-right'}" StyleClasses="WindowFooterText"
                        HorizontalAlignment="Right" HorizontalExpand="True" Margin="0 0 5 0"/>
                <TextureRect StyleClasses="NTLogoDark" Stretch="KeepAspectCentered"
                        VerticalAlignment="Center" HorizontalAlignment="Right" SetSize="19 19"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
